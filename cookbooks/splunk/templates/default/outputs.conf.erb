[tcpout]
defaultGroup = splunk_indexers

[tcpout:splunk_indexers]
server = <%= @indexers.collect { |i| i+":#{@port}"}.join(',') %>
<% if @ssl['enable'] -%>
sslRootCAPath = <%= @ssl['cacert'] %>
sslCertPath = <%= @ssl['servercert'] %>
sslPassword = <%= @ssl['password'] %>
sslVerifyServerCert = <%= @ssl['sslVerifyServerCert'] %>
<% else -%>
compressed = <%= @compressed %>
<% end -%>
